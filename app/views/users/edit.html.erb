<h3 align="center" class="mt-3">Knowing you better</h3>
<div class="container pb-5 pt-5">
  <%= form_for @user do |f|%>
    <div class="form-group">
      <%= f.label 'Your Name (Optional): ' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label 'Your church (Optional) ' %>
      <%= f.text_field :church, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label 'What is your current life stage? (Optional) ' %>
      <%= f.text_area :current_life_stage, class: 'form-control', rows: "5" %>
    </div>
    <div>
      <%= f.label 'Upload profile picture'%>
      <%= f.file_field :profile_image, direct_upload: true, class: 'form-control'%>
    </div>
    <%= f.submit 'Submit', class: 'btn btn-sm btn-primary mt-2' %>
  <% end %>
  <%= link_to "Want to change password?", edit_user_registration_path %>
</div>
