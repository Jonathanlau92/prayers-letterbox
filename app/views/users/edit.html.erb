<h3 align="center" class="mt-3">Knowing you better</h3>
<div class="container pb-5 pt-5">
  <div class="row justify-content-center">
    <%= form_for @user do |f|%>
      <div class="form-group">
        <%= f.label 'Your Name (Optional): ' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label 'Your church (Optional) ' %>
        <%= f.text_field :church, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label 'What is your current life stage? (Optional) ' %>
        <%= f.text_area :current_life_stage, class: 'form-control', rows: "5" %>
      </div>
      <%= f.submit 'Submit', class: 'btn btn-sm btn-primary' %>
    <% end %>
  </div>
</div>
