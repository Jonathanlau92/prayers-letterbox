<div class="container">
  <h3>Forgot your password?</h3>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class:'form-mobile-width' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit "Reset Password", class: 'btn btn-primary mt-3' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>

